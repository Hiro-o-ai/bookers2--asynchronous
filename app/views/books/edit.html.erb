<div class="container">
	<div class="row">
		<div class=col-md-3></div>
		<div class=col-md-5>
			<h2>Editing Book</h2>
			<%=form_for(@book) do |f| %>
			<%= render "books/error", book: f.object %>
				<h5>Title</h5>
				<%= f.text_field :title, class:"form-control" %>
				<h5>Body</h5>
				<%= f.text_area :body, class:"form-control" %>
				<br> <%= f.submit "Update Book", class:"btn  btn-block btn-primary" %>
			<% end %>
				<div class="col-md-2 show">
					<%= link_to "Show", book_path %>
				</div>
				<div class="col-md-1"><p>|</p></div>
				<div class="col-md-2 back">
					<%= link_to "Back", books_path %>
				</div>
			</div>
		</div>
		<div class=col-md-4></div>
	</div>
</div>