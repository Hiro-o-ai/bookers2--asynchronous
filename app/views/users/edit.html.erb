<div class="form-body" >
	<h3>User info</h3>
	
	<%= form_for(@user) do |f| %>
	<%= render "books/error", book: f.object %>
	<h5>Name</h5>
	<%= f.text_field :name %>

	<h5>Image</h5>
	<%= f.attachment_field :profile_image %>

	<h5>Introduction</h5>
	<%= f.text_area :introduction %>
	<br>
	<%= f.submit "Update User" %>
	<% end %>
</div>
