<thead>
  <tr>
    <th>name</th>
    <th>comment</th>
    <th>time</th>
    <th></th>
  </tr>
</thead>
<tbody>
  <% book.book_comments.each do |book_comment| %>
    <tr class="comment-<%= book_comment.id %>">
      <td>
        <%= book_comment.user.name %>
      </td>
      <td>
        <%= book_comment.comment %>
      </td>
      <td>
        <%= book_comment.created_at.strftime("%Y/%m/%d") %>
      </td>
      <td>
        <% if book_comment.user == current_user %>
          <%= link_to "Destroy", book_book_comment_path(@book, book_comment), method: :delete, remote: true, class:"btn  btn-success btn-sm", "data-confirm" => "本当に削除してもよろしいですか？" %>
        <% end %>
      </td>
    </tr>
  <% end %>
</tbody>