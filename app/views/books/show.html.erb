<div class="container">
	<p class="message"><%= notice %></p>
	<div class="row">
		<div class="col-xs-3">
			<%= render "users/list", user: @user %>
			<%= render "books/new", book: @bookn %>
		</div>
		<div class="col-xs-9">
			<h3>Book detail</h3>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<tr class="book_<%= @book.id %>">
						<%= render "books/list", book: @book %>
					</tr>
				</tbody>
			</table>

			<h3>Comment index</h3>
			<table id="js-table-comment" class="table">
				
				<%= render "books/commentlist", book: @book %>
				
			</table>
			<%= render "books/error", book:@comment %>
			<%= form_with(model: [@book, @comment])  do |f| %>
				<%= f.text_area :comment, rows:"5", class:"form-control", placeholder:"コメントをここに" %>
				<br>
				<%= f.submit "送信する", class:"btn  btn-lg pull-right btn-primary" %>
			<% end %>
		</div>
	</div>
</div>