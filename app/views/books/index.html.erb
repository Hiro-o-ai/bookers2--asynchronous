<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<%= render "users/list", user: current_user %>
			<%= render "books/new", book: @bookn %>

		</div>
		<div class="col-xs-9">
			<h3>Books</h3>
			<table class="table table-hover">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<% @books.each do |book| %>
					<tbody>
						<tr class="book_<%= book.id %>">
							<%= render "books/list", book: book %>
						</tr>
					</tbody>
				<% end %>
			</table>	
		</div>
	</div>
</div>
